@model Nes.Dal.EntityModels.ProductCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Nes.Resources.NesResource.AdminCategoryCreateTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Nes.Resources.NesResource.AdminNoteForm
            </div>
            <div class="panel-body">
                @if (TempData["Notification"] != null)
                {
                    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                        @TempData["Notification"]
                    </div>
                }
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post, new { @role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Title)</label>
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Title)
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Images)
                                </label>
                                @Html.TextBoxFor(model => model.Images, new { @class = "form-control", @id = "txtImgUrl" })
                                <input type="button" id="btnSelectImg" class="btn btn-info" value="@Nes.Resources.NesResource.AdminSelectImageButtonText" />
                                @Html.ValidationMessageFor(model => model.Images)
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Description)
                                </label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Order)
                                </label>
                                @Html.TextBoxFor(model => model.Order, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Order)
                            </div>

                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.ParentID)</label>
                                @Html.DropDownListFor(model => model.ParentID, (SelectList)ViewBag.Parents, @Nes.Resources.NesResource.AdminEmptySelectionTextForFunction, new { @class = "form-control" })
                            </div>



                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.MetaKeywords)
                                </label>
                                @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MetaKeywords)
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.MetaDescription)
                                </label>
                                @Html.TextAreaFor(model => model.MetaDescription, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MetaDescription)
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Status)
                                </label>
                                @Html.CheckBoxFor(model => model.Status, new { @class = "checkbox", @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.Status)
                            </div>
                            <button type="submit" class="btn btn-default">@Nes.Resources.NesResource.AdminSaveButtonText</button>

                            @Html.ActionLink(@Nes.Resources.NesResource.GoBackToListText, "Index", new { @class = "btn btn-info" });
                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
